<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Abha_update_email">

    <TextView
        android:id="@+id/abha_forgot_abha_page_head22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:text="Update Email ID"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/abha_update_email_email_id_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:height="@dimen/_50sdp"
            android:background="@drawable/circularbordersolid_grey"
            android:drawableLeft="@drawable/id_vector"
            android:drawablePadding="3dp"
            android:drawableTint="#6C6A6A"
            android:ems="10"
            android:hint="New Email ID"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/abha_update_email_otp_et"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight="0.7"
                android:height="50dp"
                android:background="@drawable/circularbordersolid_grey"
                android:drawableLeft="@drawable/key"
                android:drawablePadding="2dp"
                android:drawableTint="#6C6A6A"
                android:ems="10"
                android:hint="OTP"
                android:inputType="number"
                android:paddingLeft="@dimen/_5sdp" />

            <Button
                android:id="@+id/abha_update_email_get_otp_btn"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_52sdp"
                android:layout_weight="0.3"
                android:backgroundTint="@color/btn_theme"
                android:text="GET OTP"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/abha_update_email_verify_otp_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:backgroundTint="@color/btn_inactive_theme"
            android:drawableRight="@drawable/baseline_login_24"
            android:drawableTint="@color/black"
            android:enabled="false"
            android:paddingLeft="@dimen/_38sdp"
            android:text="Verify OTP"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>