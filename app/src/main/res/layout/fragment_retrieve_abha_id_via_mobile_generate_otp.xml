<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".retrieve_abha_id_via_mobile_generate_otp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_18sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/b612_mono"
                        android:text="Step 1/2: Verify Mobile" />

                    <EditText
                        android:id="@+id/abha_forgot_abha_via_mobile_mobile_no_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_18sdp"
                        android:height="@dimen/_50sdp"
                        android:background="@drawable/circularbordersolid_grey"
                        android:drawableLeft="@drawable/baseline_phone_24"
                        android:drawablePadding="3dp"
                        android:drawableTint="#6C6A6A"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Mobile No."
                        android:inputType="textPersonName" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/abha_forgot_abha_via_mobile_otp_et"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_weight="0.4"
                            android:background="@drawable/circularbordersolid_grey"
                            android:drawableLeft="@drawable/key"
                            android:drawablePadding="2dp"
                            android:drawableTint="#6C6A6A"
                            android:ems="10"
                            android:hint="OTP"
                            android:inputType="number"
                            android:paddingLeft="@dimen/_5sdp" />

                        <Button
                            android:id="@+id/abha_forgot_abha_via_mobile_get_otp_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_52sdp"
                            android:layout_weight="0.6"
                            android:backgroundTint="@color/btn_theme"
                            android:text="GET OTP"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"
                            app:iconPadding="0dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/abha_forgot_abha_via_mobile_verify_otp_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:backgroundTint="@color/btn_inactive_theme"
                        android:drawableRight="@drawable/baseline_navigate_next_24"
                        android:drawableTint="@color/black"
                        android:enabled="false"
                        android:paddingLeft="@dimen/_38sdp"
                        android:text="@string/verify_otp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>