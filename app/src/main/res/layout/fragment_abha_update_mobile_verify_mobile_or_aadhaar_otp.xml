<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Abha_update_mobile_verify_mobile_or_aadhaar_otp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/abha_register_via_aadhar_verify_aadhaar_textView2222"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/b612_mono"
                    android:gravity="left"
                    android:text="Step 2/2: Verify Aadhaar OR Mobile No."
                    android:textColor="#979797"
                    android:textSize="@dimen/_10ssp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_18sdp">

                    <RadioButton
                        android:id="@+id/abha_update_mobile_send_aadhaar_otp_radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Send OTP on Aadhaar linked Mobile" />

                    <RadioButton
                        android:id="@+id/abha_update_mobile_send_mobile_otp_radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send OTP on ABHA linked Mobile" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/abha_update_mobile_mobile_no_or_aadhaar_otp_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_weight="0.4"
                        android:background="@drawable/circularbordersolid_grey"
                        android:drawableLeft="@drawable/key"
                        android:drawablePadding="2dp"
                        android:drawableTint="#6C6A6A"
                        android:ems="10"
                        android:hint="OTP"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_5sdp" />

                    <Button
                        android:id="@+id/abha_update_mobile_mobile_no_or_aadhaar_get_otp_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_52sdp"
                        android:layout_weight="0.6"
                        android:backgroundTint="@color/btn_theme"
                        android:text="GET OTP"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        app:iconPadding="0dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/abha_update_mobile_mobile_no_or_aadhaar_verify_otp_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:backgroundTint="@color/btn_inactive_theme"
                    android:drawableRight="@drawable/baseline_login_24"
                    android:drawableTint="@color/black"
                    android:enabled="false"
                    android:paddingLeft="@dimen/_38sdp"
                    android:text="Update Mobile"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>