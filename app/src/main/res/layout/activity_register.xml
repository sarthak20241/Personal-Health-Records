<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Create Your Account"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/profile" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_name"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nametb3"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:fontFamily="@font/abeezee"
                    android:hint="Full Name" />


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/profileimage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/profile" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_mobile"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et2"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:fontFamily="@font/abeezee"
                    android:hint="Mobile" />


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/mail" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_email"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et3"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:fontFamily="@font/abeezee"
                    android:hint="Email" />


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/passwordtb1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_password"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et4"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:fontFamily="@font/abeezee"
                    android:hint="Password" />


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    app:srcCompat="@drawable/password" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_confpassword"
                    app:passwordToggleEnabled="true"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et5"
                        android:layout_width="260dp"
                        android:layout_height="67dp"
                        android:background="@color/white"
                        android:fontFamily="@font/abeezee"
                        android:hint="Confirm Password" />


                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/alreadyacc"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:text="Already have a Account"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/signup_button"
        android:layout_width="245dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/button_signup" />

    <LinearLayout
        android:id="@+id/linearLayoutgoogle"
        android:layout_width="245dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="46dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/googlelogo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="173dp"
            android:layout_height="46dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Login with Google"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>