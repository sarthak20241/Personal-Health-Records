<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/black"
        android:paddingBottom="40dp"
        android:text="Sign In"
        android:textSize="48sp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/mail" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailTextBox"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:fontFamily="@font/abeezee"
                    android:hint="Email" />


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    app:srcCompat="@drawable/password" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passLayout"
                    app:passwordToggleEnabled="true"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordtextbox1"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:background="@color/white"
                        android:fontFamily="@font/abeezee"

                        android:hint="Password" />


                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="30dp"
            android:fontFamily="@font/abeezee"
            android:text="Forgot Password?"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/signinbutton"
            android:layout_width="309dp"
            android:layout_height="93dp"
            app:srcCompat="@drawable/loginbutton2" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="OR" />


    <LinearLayout
        android:id="@+id/linearLayoutgoogle"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@drawable/googlelogin"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="46dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/googlelogo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="173dp"
            android:layout_height="33dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Login with Google"
            android:textSize="16sp" />

    </LinearLayout>





    <TextView
        android:id="@+id/signuplink1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:fontFamily="@font/abeezee"
        android:text="Dont Have an Account? Sign Up" />
</LinearLayout>