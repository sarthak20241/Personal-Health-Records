<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DateTimelineFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Timeline"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboto">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:gravity="left">


                </TextView>

                <LinearLayout
                    android:id="@+id/linearLayout80"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/googlelogin"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_margin="10dp"

                    android:paddingBottom="10dp">


                    <LinearLayout
                        android:layout_width="151dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="30dp">

                        <ImageView
                            android:id="@+id/dateiconimage_from"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/dateicon" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/date_from"
                            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_from"
                                android:layout_width="119dp"
                                android:layout_height="73dp"
                                android:background="@color/white"
                                android:fontFamily="@font/abeezee"
                                android:hint="Date"
                                android:textSize="13dp" />


                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To     "
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:gravity="left">


                </TextView>
                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/googlelogin"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_margin="10dp"

                    android:paddingBottom="10dp">


                    <LinearLayout
                        android:layout_width="154dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="30dp">

                        <ImageView
                            android:id="@+id/dateiconimage_to"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/dateicon" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/date_to"
                            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_to"
                                android:layout_width="115dp"
                                android:layout_height="73dp"
                                android:background="@color/white"
                                android:fontFamily="@font/abeezee"
                                android:hint="Date"
                                android:textSize="13dp" />


                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAnalysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analysis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imageInfoRecyclerViewOfTimeline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>


